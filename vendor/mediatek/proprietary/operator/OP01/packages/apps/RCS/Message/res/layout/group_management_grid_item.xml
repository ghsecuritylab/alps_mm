<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="@color/darkgrey" -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/group_member_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <!-- android:paddingTop="42dip" -->
        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            >
          <!-- android:scaleType="fitXY" -->
          <!-- centerInside/centerCrop -->
        </ImageView>

        <TextView
            android:id="@+id/grid_item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            >
          <!-- android:textSize="16sp" -->
        </TextView>
    </LinearLayout>

    <!-- android:layout_marginRight="20dip" -->
    <LinearLayout
        android:id="@+id/deleteLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:focusable="false"
        android:gravity="center"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/grid_delete_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rcs_group_delete_member"
            >
        </ImageView>
    </LinearLayout>

    <!-- android:layout_marginRight="20dip" -->
    <LinearLayout
        android:id="@+id/chairmanLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:focusable="false"
        android:gravity="center"
        android:visibility="invisible" >

      <ImageView
          android:id="@+id/grid_chairman_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/ic_rcs_group_chairman"
          >
      </ImageView>
    </LinearLayout>

</FrameLayout>